# Runtime
ENV=dev
LOG_LEVEL=INFO

# DB / cache (safe defaults for local/dev)
DB_URL=sqlite:///dev.db
REDIS_URL=redis://localhost:6379/0

# Identity for crawling/verifying (edit before real runs)
USER_AGENT=EmailVerifierBot/0.1 (+mailto:you@example.com)
HELO_DOMAIN=example-smtp-helo.test

# Queue / rate limit
REDIS_URL=redis://localhost:6379/0
QUEUE_NAME=verify
GLOBAL_MAX_CONCURRENCY=8
PER_MX_MAX_CONCURRENCY=2
JOB_VISIBILITY_TIMEOUT_SEC=120      # auto-release semaphore if worker dies
MAX_RETRIES=5
BACKOFF_BASE_MS=750
BACKOFF_MAX_MS=60000
JITTER_MAX_MS=2000
